// prisma/schema.prisma

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id               Int            @id @default(autoincrement())
    email            String         @unique
    password         String
    languages        String[]
    languagesToLearn String[]
    projectIdeas     String[]
    codeSnippets     CodeSnippets[]
    links            String[]
}

model CodeSnippets {
    id        Int    @id @default(autoincrement())
    User      User?  @relation(fields: [userId], references: [id])
    userId    Int?
    codeBlock String
}

