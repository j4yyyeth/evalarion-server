// prisma/schema.prisma

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id               Int           @id @default(autoincrement())
    email            String        @unique
    password         String
    githubUsername   String
    leetCodeUsername String
    languages        String[] // Going to be strict languages
    languagesToLearn String[] // Going to be strict languages
    projectIdeas     Project[]
    codeSnippets     CodeSnippet[]
    links            String[]
}

model Project {
    id          Int      @id @default(autoincrement())
    User        User?    @relation(fields: [userId], references: [id])
    userId      Int?
    title       String
    description String
    techStack   String[] // Going to be strict languages
}

model CodeSnippet {
    id        Int    @id @default(autoincrement())
    User      User?  @relation(fields: [userId], references: [id])
    userId    Int?
    codeBlock String
    language  String // Going to be strict languages
}

